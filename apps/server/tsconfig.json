{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "ignoreDeprecations": "5.0",
    "checkJs": false,
    "strict": false
  },
  "include": ["./types/*.d.ts", "./src/**/*.ts"]
}
